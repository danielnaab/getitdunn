<div class="footer-content">
    <div class="footer-links">
        <a class="social" target=_blank href="<%= generals[0].fragments['facebook-url'].value %>"><img src="/images/facebook.png"></a>
        <a class="social" target=_blank href="<%= generals[0].fragments['twitter-url'].value %>"><img src="/images/twitter.png"></a>
        <a class="social" target=_blank href="<%= generals[0].fragments['flickr-url'].value %>"><img src="/images/flickr.png"></a>
        <h2>Recent Blog Posts</h2>
        <ul>
            <% fittips.sort! { |a,b| a.fragments['date'].value <=> b.fragments['date'].value }.reverse![0..2].each do |fit_tip| %>
                <li>
                    <%= link_to fit_tip.fragments['title'].value, "/blog/#{fit_tip.slugs[0]}.html" %>
                </li>
            <% end %>
        </ul>
        <%= link_to 'See all posts...', '/blog.html' %>
        <h2>Quick Links</h2>
        <ul>
            <li><%= link_to 'Home', '/index.html' %></li>
            <% races.each do |race| %>
                <li><%= link_to race.fragments['title'].as_html(nil), "/#{race.uid}.html" %></li>
            <% end %>
            <li><%= link_to 'Blog', '/blog.html' %></li>
            <li><%= link_to 'Sponsors', '/sponsors.html' %></li>
            <li><%= link_to 'Results', '/results.html' %></li>
            <li><%= link_to 'About Us', '/about-us.html' %></li>
        </ul>
        <% if generals[0].fragments['register_link'] && !generals[0].fragments['register_link'].url.blank? %>
            <a href="<%= generals[0].fragments['register_link'].url %>" target="_blank"><button>REGISTER NOW</button></a>
        <% end %>
        <div class="email-link">
            SAY HELLO:
            <a href="mailto:<%= generals[0].fragments['contact-email-address'].value %>">
                <%= generals[0].fragments['contact-email-address'].value %>
            </a>
        </div>
    </div>
    <div class="footer-text">
        <%= generals[0].fragments['footer_text'].as_html(nil) %>
        <div id="flickr"></div>
    </div>
</div>
<div class="footer-credits">
    Â© <%= Time.now.year %> Get It Dunn 5k &amp; Half Marathon | Menomonie, WI | Designed by <a target=_blank href="http://www.kismetbydesign.com">Kismet By Design</a> and <a target=_blank href="http://crushingpennies.com">Crushing Pennies</a>
</div>
<script>
    window.initFlickr("<%= generals[0].fragments['flickr-user-id'].value %>",
                      "<%= generals[0].fragments['flickr-album-id'].value %>",
                      6)
</script>
