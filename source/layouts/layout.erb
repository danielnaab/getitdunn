<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <title><%= globals[0].fragments['title'].value %> - <%= current_page.data.title %></title>
        <link rel="shortcut icon" href="<%= globals[0].fragments['favicon'].main.url %>" />
        <link rel="apple-touch-icon" href="<%= globals[0].fragments['favicon'].main.url %>" />
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Signika" rel="stylesheet">
        <%= stylesheet_link_tag "styles" %>
        <%= javascript_include_tag    "all" %>
    </head>
    <body class="<%= page_classes %>">
        <header class="outer">
            <%= partial('header', :locals => current_page.data) %>
        </header>
        <%= yield %>
        <footer>
            <%= partial('footer', :locals => current_page.data) %>
        </div>
    </body>
</html>
