<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <title><%= generals[0].fragments['title'].value %> - <%= current_page.data.title %></title>
        <link rel="shortcut icon" href="<%= generals[0].fragments['favicon'].main.url %>" />
        <link rel="apple-touch-icon" href="<%= generals[0].fragments['favicon'].main.url %>" />
        <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,800,700,600,300' rel='stylesheet' type='text/css'>
        <link href='//fonts.googleapis.com/css?family=Roboto+Slab:400,300,100,700' rel='stylesheet' type='text/css'>
        <%= stylesheet_link_tag "styles" %>
        <%= javascript_include_tag "all" %>
        <%= google_analytics_tag %>
    </head>
    <body class="<%= page_classes %>">
        <%= yield %>
        <footer>
            <%= partial('footer', :locals => current_page.data) %>
        </footer>
    </body>
</html>
